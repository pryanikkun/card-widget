{
  "extends": "airbnb-base",
  "env": {
    "es6": true,
    "browser": true,
    "jest": true
  },
  "rules": {
    "import/prefer-default-export": "off",
    "prefer-const": "off",
    "no-plusplus": "off",
    "no-trailing-spaces": "off",
    "no-unreachable-loop": "off",
    "no-unused-vars": "off",
    "class-methods-use-this": "off",
    "space-before-function-paren": "off",
    "no-restricted-syntax": [
      "error",
      "LabeledStatement",
      "WithStatement"
    ]
  }
}
